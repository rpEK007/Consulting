footer#footer-1.footer
  .container
    .row
      .col-md-4
        .widget#footerText
          span.footer-brand JWA
          p= partAboutJWA1
          .partners
            a
              img(src="../../img/partners/iris.jpg")
            a
              img(src="../../img/partners/thumbnail187.jpg")
      .col-md-3.col-md-offset-1
        .widget.popular-posts
          h5.subpage-title= newsTitle
          - var i = 0
          ul.recent-posts#footer-news
            while i < 3
              li
                h5
                  a(href='#news' data-id= i)= news[i].title 
                  small= news[i].date
                  - i++
      .col-md-3.col-md-offset-1.footer-contacts
        .widget
          include contactForm.jade